<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_player_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:textAllCaps="true"
            android:textColor="@color/text_header"
            android:textSize="@dimen/item_player_name_text_size"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/cv_player_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Z"
            tools:visibility="visible" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_player_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_player_height"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="@dimen/item_player_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_player_header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/fl_player_bg"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_player_list"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_player_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        tools:srcCompat="@drawable/ic_close" />

                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_player_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/item_player_name_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_player_team"
                    app:layout_constraintEnd_toStartOf="@id/iv_player_preferred"
                    app:layout_constraintStart_toEndOf="@id/fl_player_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="Zirkzee" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_player_team"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/item_player_team_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_player_preferred"
                    app:layout_constraintStart_toEndOf="@id/fl_player_bg"
                    app:layout_constraintTop_toBottomOf="@id/tv_player_name"
                    tools:text="BOL" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_player_preferred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_star_unselected" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>